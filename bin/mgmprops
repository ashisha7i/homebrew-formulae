#!/bin/bash

function showUsage {
    echo "    Usage: mgmprops qa4|uat|preprod|prod" 
    exit
}

if [ "$#" -ne 1 ]; then
    echo "Incorrect usage."
    echo " "
    showUsage
fi
url=""


if [[ "$1" != "qa4" && "$1" != "uat" && "$1" != "preprod" && "$1" != "prod" ]]; then
    showUsage
elif [ "$1" = "prod" ]; then
    url="https://content.mgmresorts.com/content-api/v3/en/property/detail/all"
else 
    url="https://$1-content.devtest.vegas/content-api/v3/en/property/detail/all"
fi

curl -s $url | jq -r '"  ID#OPERA#NAME#REGION#TIMEZONE", "  ---#------#-----#-------#---------",(.[] | "  \(.id)#\(.operaPropertyCode)#\(.name)#\(.regionName)#\(.timezone)")' | column -ts "#" | sed -e "s/null/--  /g"

echo "
  Fetched from: $url"